<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
        <h1>All Restaurants</h1>
        <div>
            <a href="/restaurants/new">Add Restaurant</a>
        </div>

    <ul> 
        <% for(let restaurant of restaurants){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(restaurant.images.length){ %>
                    <img class="img-fluid" alt="" src="<%= restaurant.images[0].url %>">
                    <% }else{ %>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="https://res.cloudinary.com/da6exmxsw/image/upload/v1736710524/YelpCamp/qho7pid8lpjbdufz74oy.jpg">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= restaurant.title %></h5>
                        <p class="card-text"><%= restaurant.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= restaurant.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/restaurants/<%= restaurant._id %>">View <%= restaurant.title %></a>
                    </div>
                </div>
            </div>
        </div> 
        <% } %>
    </ul>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const restaurants = {features: <%- JSON.stringify(restaurants) %>};
    </script>
    <script src="/javascripts/restaurantClusterMap.js"></script>